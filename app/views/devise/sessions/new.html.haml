.row.justify-content-md-center
  .col.col-sm-10.col-md-8.col-lg-4.col-xg-4.bg-white.p-4.rounded.shadow
    %h2.text-center.pt-4 Log in
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }
        <br>
        = f.input :password, required: false, input_html: { autocomplete: "current-password" }, class: "py-2"
        = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, "Log in", class: "nav-buttons my-4"
    = render "devise/shared/links"
