        = link_to "Forum App", root_path, class: "logo"
      %nav.my-2.my-md-0.me-md-3
        - if user_signed_in?
          = link_to "New Post", new_post_path, class: "nav-buttons me-4"
          = link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-buttons me-4"
        - else
          = link_to "Sign Up", new_user_registration_path, class: "nav-buttons me-4"
          = link_to "Sign In", new_user_session_path, class: "nav-buttons me-4"

